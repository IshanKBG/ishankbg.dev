---
import  Layout  from "../../components/BaseLayout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---
<Layout
 title="Blog"
 description="A collection of articles written by me."
 url=`${Astro.site}/blog`
>
    <div class="flex flex-col gap-4" aria-label="Recent Articles">
        <h2 class="text-[#d6bf64] text-xl">
            Articles
        </h2>
        <div class="flex flex-col gap-4">
            {allPosts.map((blog)=> (
                    <article>
                        â€¢ <time datetime={new Date(blog.data.pubDate).toISOString()}>{new Date(blog.data.pubDate).toLocaleDateString()}</time> -
                        <a class="text-[#FFA8CE]" href=`/blog/${blog.slug}`>
                            {blog.data.title}
                        </a>
                    </article>
            ))}
        </div>
    </div>
</Layout>