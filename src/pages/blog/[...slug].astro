---
import { getCollection } from "astro:content";
import Base from "../../components/base.astro";
import {InferGetStaticParamsType} from "astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
    return posts.map(entry => ({
        params: { slug: entry.slug }, props: { entry },
    }));
}
const { entry } = Astro.props as InferGetStaticParamsType<typeof getStaticPaths> ;
const { Content } = await entry.render();
---
<Base>
    <header class="flex flex-col gap-4">
        <h1 class="text-2xl md:text-4xl font-bold text-white">{entry.data.title }</h1>
        <p class="font-light text-sm">Published on <time>{new Date(entry.data.pubDate).toLocaleDateString()}</time> </p>
    </header>
    <article class="prose px-2 md:px-4 py-2 md:py-4 text-white text-md antialiased">
       <Content />
    </article>
</Base>