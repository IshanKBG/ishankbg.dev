---
import Base from "./BaseLayout.astro"
let formatter = new Intl.ListFormat('en', { style: 'long', type: 'conjunction' });
let keywords = formatter.format(Astro.props.tags);
---
<Base
        title={Astro.props.title}
        description={Astro.props.description}
        keywords={keywords}
        url={`https://ishankbg.dev/blog/${Astro.props.url}`}
>
    <slot name="head" slot="head" />
    <slot />
</Base>