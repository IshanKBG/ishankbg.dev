---
import type { Graph, Thing, WithContext } from "schema-dts"

import { JsonLd } from "./jsonld"

export type Props<T extends Thing> = {
	item: Graph | WithContext<Thing> | WithContext<T>
	space?: string | number
}

const { item, space } = Astro.props
---

<script type="application/ld+json" set:html={JsonLd(item, space)} />
